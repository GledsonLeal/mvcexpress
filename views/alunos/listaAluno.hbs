{{#each erros}}
    <div class="alert alert-danger">{{texto}}</div>
{{else}}
{{#each acertos}}
    <div class="alert alert-success">{{texto}}</div>
{{else}}

{{/each}}

{{/each}}
<h1>Lista de Alunos: </h1>

{{#each alunos}}  
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="nome">Nome: </label>
      <p class="alert alert-secondary">{{this.nome}}</p>
    </div>
    <div class="form-group col-md-6">
      <label for="email">Email</label>
      <p class="alert alert-secondary" >{{this.email}} </p>
    </div>
  </div>
  <div class="form-group">
    <label for="endereco">Endereço</label>
    <p class="alert alert-secondary" >{{this.endereco}} </p>
  </div>
  <div class="form-row">
    <div class="form-group col-md-6">
      <label for="cidade">Cidade</label>
      <p class="alert alert-secondary" >{{this.cidade}} </p>
    </div>
    <div class="form-group col-md-4">
      <label for="estado">Estado</label>
      <p class="alert alert-secondary" >{{this.estado}} </p>
      </div>
    <div class="form-group col-md-2">
      <label for="cep">CEP</label>
      <p class="alert alert-secondary" >{{this.cep}} </p>
    </div>
  </div>
    <div class="form-group">
      <label for="endereco">Data de Criação: </label>
      <p class="alert alert-secondary" >{{this.createdAt}} </p>
  </div>
  <div class="form-group">
    <a href= "/alunos/deletarAluno/{{dataValues.id}}"><button class="btn btn-danger">Deletar</button></a>
    <a href= "/alunos/editarAluno/{{dataValues.id}}"><button class="btn btn-primary">Editar</button></a>   
  </div>
  <hr>
{{else}}
    <h5>Nenhum aluno cadastro</h5>
{{/each}}